<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.bdqn.servlet.HomeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderRoomServlet</servlet-name>
        <servlet-class>com.bdqn.servlet.OrderRoomServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckRepeatServlet</servlet-name>
        <servlet-class>com.bdqn.servlet.CheckRepeatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddRoomServlet</servlet-name>
        <servlet-class>com.bdqn.servlet.AddRoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderRoomServlet</servlet-name>
        <url-pattern>/orderRoom</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckRepeatServlet</servlet-name>
        <url-pattern>/check</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddRoomServlet</servlet-name>
        <url-pattern>/addRoom</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
</web-app>